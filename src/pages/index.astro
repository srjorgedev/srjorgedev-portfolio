---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
const response = await fetch("https://api.github.com/users/srjorgedev/repos");
const data = await response.json();
const repos = data.map((repo) => {
	return {
		id: repo.id,
		name: repo.name,
		description: repo.description,
		url: repo.html_url,
	};
});
console.log(repos);
---

<Layout title="Portafolio - JorgeDev">
	<main>
		<header>
			<nav>
				<ul>
					<li>Sobre mi</li>
					<li>Tecnologias</li>
					<li>Proyectos</li>
					<li>Contacto</li>
				</ul>
			</nav>
		</header>

		<section>
			<article>
				<h1>Jorge Dev</h1>
				<h2>
					Estudiante, me gusta programar, el desarrolo web, movile,
					frontend y baclend
				</h2>
			</article>
			<picture>
				<img src="#" alt="imagen" />
			</picture>
		</section>

		<section>
			<h3>Las tecnologias que uso:</h3>
		</section>

		<section>
			<h3>Mis proyectos:</h3>
			<ul>
				{
					repos.map(({ id, name, description, url }) => {
						if (id != 781850984) {
							return (
								<li>
									<h1>{name}</h1>
									<p>{description}</p>
									<a href={url} target="_blank">Ver repositorio</a>
								</li>
							);
						}
					})
				}
			</ul>
		</section>

		<section>
			<h3>Contactame:</h3>
		</section>
	</main>
</Layout>

<style>
	header {
		border-bottom: 2px solid #dfdede;
		height: 5rem;

		& nav {
			height: 100%;

			& ul {
				display: flex;
				align-items: center;
				justify-content: center;
				list-style: none;
				height: 100%;
				gap: 1rem;

				& li {
					font-size: 2rem;
					padding: 0.5rem 1.5rem;
					color: #f1f1f1;
					user-select: none;
					border-radius: 0.5rem;
					transition:
						background 250ms ease-out,
						box-shadow 350ms ease-out;

					&:hover {
						background: transparent;
						box-shadow: 0px 1px 10px 1px #f1f1f1;
					}
				}
			}
		}
	}

	section {
		& ul {
			width: 100%;
			min-height: 500px;
			height: auto;
			display: flex;
			flex-wrap: wrap;
			list-style: none;
			align-items: center;
			justify-content: space-between;
			gap: 1rem;

			& li {
				width: calc(1080px / 2 - 0.5rem);
				height: 250px;
				background: #181818;
				padding: 2rem;
				border-radius: 1rem;
				border: 1px solid #222222;
				transition: box-shadow 350ms ease-out;
				position: relative;

				&:hover {
					box-shadow: 0px 1px 10px 1px #202020;
				}

				& h1 {
					font-size: 2.5rem;
				}

				& p {
					font-size: 1.25rem;
					color: #cecece;
					margin: 0.75rem 0;
				}

				& a {
					text-decoration: none;
					color: white;
					padding: 0.75rem 2rem;
					background: #202020;
					font-size: 1.5rem;
					border-radius: 1.1rem;
					border: 1px solid #2b2b2b;
					position: absolute;
					bottom: 2rem;
					right: 2rem;
					font-weight: 500;
					transition: background 0.3s ease-in-out, border-color 0.2s ease-in-out;

					&:hover {
						background: #313131;
						border-color: #c1c1c1;
					}
				}
			}
		}
	}
</style>
